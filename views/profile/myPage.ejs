<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user.name %>'s Profile</title>
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/my_page.css">
</head>
<body class="bg-light">
  <%- include('../navbar') %>
  <div class="container">
    <div class="card shadow rounded-4 pb-4">
      <div class="card-body" style="width:50vw;">

        <div class="d-flex align-items-center mb-3 gap-3 flex-wrap">
          <!-- profile pic and upload in a vertical column -->
          <div class="d-flex flex-column align-items-center">
            <img 
              src="<%= user.profilePicUrl || '/default-profile.png' %>" 
              alt="Profile Picture" 
              class="rounded-circle shadow"
              style="width: 80px; height: 80px; object-fit: cover;"
            >
            <%=locals.profileUrl%>
            <% if (locals.profileUrl===null){ %>
              <form action="/upload-profile-pic" method="POST" enctype="multipart/form-data" class="mt-2">
                <label class="btn btn-sm btn-outline-primary mb-0 ">
                  <i class="fa-solid fa-upload"></i> Upload Image
                  <input 
                    type="file" 
                    name="profilePic" 
                    accept="image/*"
                    class="d-none"
                    onchange="this.form.submit()" 
                  >
                </label>
              </form>
            <%}%>
          </div>
        
          <!-- name and verification badge -->
          <div class="d-flex gap-1 flex-wrap flex-column justify-content-between">
            <h3 class="card-title mb-0 text-primary"><%= user.name %></h3>
            <% if (!locals.isVerified) { %>
              <form action="/verify-email" method="GET">
                <button type="submit" class="btn btn-sm btn-warning d-flex align-items-center gap-1">
                  <i class="fa-solid fa-circle-exclamation"></i> Verify Email
                </button>
              </form>
            <% } else { %>
              <span class="badge bg-success d-flex align-items-center gap-1">
                <i class="fa-solid fa-check-circle"></i> Verified
              </span>
            <% } %>
          </div>
        </div>
              
        <hr>
        <h6 class="mt-4">Manage Your Links:</h6>
        <div class="scroll-box mt-2">
          <% links.forEach(function({ id, shortCode, url }) { %>
            <div class="d-flex gap-2 mb-3">
              <form action="/update-link/<%= id %>" method="POST" class="flex-grow-1 d-flex gap-2">
                <input 
                  type="text" 
                  name="shortCode" 
                  value="<%= shortCode %>" 
                  class="form-control url-input"
                  required
                >
                <input 
                  type="text" 
                  name="url" 
                  value="<%= url %>" 
                  class="form-control url-input"
                  required
                >
                <button type="submit" class="btn btn-success">Edit</button>
              </form>
              <form action="/delete/<%= shortCode %>" method="POST">
                <button type="submit" class="btn btn-danger" title="Delete">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </div>
          <% }); %>
        </div>
      </div>
      <a href="/" class="btn btn-outline-secondary mt-3 w-25 align-self-center">
        ‚Üê Back
      </a>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
