<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user.name %>'s Profile</title>
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/my_page.css">
</head>
<body class="bg-light">
  <%- include('../navbar') %>
  <div class="container">
    <div class="card shadow rounded-4 pb-4">
      <div class="card-body">
        <h3 class="card-title mb-3 text-primary">Welcome, <%= user.name %>!</h3>
        <hr>
        <h6 class="mt-4">Manage Your Links:</h6>
        <div class="scroll-box mt-2">
          <% links.forEach(function({ id, shortCode, url }) { %>
            <div class="d-flex gap-2 mb-3">
              <form action="/update-link/<%= id %>" method="POST" class="flex-grow-1 d-flex gap-2">
                <input 
                  type="text" 
                  name="shortCode" 
                  value="<%= shortCode %>" 
                  class="form-control url-input"
                  required
                >
                <input 
                  type="text" 
                  name="url" 
                  value="<%= url %>" 
                  class="form-control url-input"
                  required
                >
                <button type="submit" class="btn btn-success">Edit</button>
              </form>
              <form action="/delete/<%= shortCode %>" method="POST">
                <button type="submit" class="btn btn-danger" title="Delete">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <a href="/" class="btn btn-outline-secondary mt-3">
      ‚Üê Back
    </a>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
